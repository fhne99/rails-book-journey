<h1>Liste de mes livres</h1>

<%= link_to 'Nouveau livre', new_book_path, class: 'btn btn-primary mb-3' %>

<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-4">
      <div class="card mb-4">
          <h5 class="card-title"><%= book.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
          <p class="card-text">
            <strong>Date de début :</strong> <%= book.start_date %><br>
            <strong>Date de fin :</strong> <%= book.end_date %><br>
            <strong>Note :</strong> <%= book.rating %>/5<br>
            <strong>Commentaire :</strong> <%= book.comment %><br>
            <strong>Statut :</strong> <%= book.status.humanize %>
          </p>
          <%= link_to 'Voir', book, class: 'btn btn-primary' %>
          <%= link_to 'Modifier', edit_book_path(book), class: 'btn btn-secondary' %>
          <%= link_to 'Supprimer', book, method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>

