<%= simple_form_for @book do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :start_date, as: :date %>
  <%= f.input :end_date, as: :date %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.input :comment %>
  <%= f.input :cover_url %>
  <%= f.input :status, collection: Book::STATUSES.values.map { |status| [status.humanize, status] } %>
  <%= f.button :submit %>
<% end %>
